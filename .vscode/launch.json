    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Find Maximas",
            "type": "python",
            "request": "launch",
            "program": "find_local_maximas.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-input",
                "data.json",
                "-output",
                "results.json",
                "-window",
                "10"
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        }
    ]
}